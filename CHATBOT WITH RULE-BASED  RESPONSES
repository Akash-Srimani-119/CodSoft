def wishMe():
    hour = datetime.datetime.now().hour
    if hour>=0 and hour<12:
        print("Good Morning!")

    elif hour>=12 and hour<18:
        print("Good Afternoon!")   

    else:
        print("Good Evening!")  

    print("I am Liza Sir. Please tell me how may I help you")   
    

